@model AspNetMVC.Models.Post

@{
    ViewBag.Title = ViewBag.PostType;
}

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('@Url.Content("~/images/contact-bg.jpg")') ">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h1>刪除文章</h1>
                    <hr class="small">
                    <span class="subheading">若確認刪除文章，請按下送出.</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.title)</dt>
                <dd>@Html.DisplayFor(model => model.title)</dd>

                <dt>@Html.DisplayNameFor(model => model.sub_title)</dt>
                <dd>@Html.DisplayFor(model => model.sub_title)</dd>

                <dt>@Html.DisplayNameFor(model => model.content)</dt>
                <dd>@Html.DisplayFor(model => model.content)</dd>

                <dt>@Html.DisplayNameFor(model => model.is_feature)</dt>
                <dd>@Html.DisplayFor(model => model.is_feature)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="刪除" class="btn btn-default" /> 
                    @*|@Html.ActionLink("Back to List", "Index")*@
                </div>
            }

        </div>
    </div>
</div>